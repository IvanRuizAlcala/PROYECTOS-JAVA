import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ArrayList<String> frasesParaIncluir = new ArrayList<String>();
		Scanner leer = new Scanner(System.in);
		System.out.println(" vamos a añadir frases a un archivo :");
		String incluirFrases = incluirFrases();
		System.out.println(" ahora vamos a añadirla al arrayList");
		frasesParaIncluir.addAll(guardarFrases(frasesParaIncluir, incluirFrases));
		System.out.println(" añadamos al archivo");
		try {
			conectarArchivo(frasesParaIncluir);
		} catch (IOException e) {
			e.getMessage();
		}
	}

	public static String incluirFrases() {
		String frase;
		Scanner leer = new Scanner(System.in);
		System.out.println(" dime una frase para añadir al archivo");
		frase = leer.next();
		return frase;
	}

	public static ArrayList<String> guardarFrases(ArrayList<String> incluirFrases, String frase) {
		incluirFrases.add(frase);
		return incluirFrases;

	}
	public static void conectarArchivo(String palabra) throws IOException {
		PrintWriter bufferEntrada = null;
	
			try {
				System.out.println(" abrimos archivo para añadir frases");
				bufferEntrada = new PrintWriter(new BufferedWriter(new FileWriter("palabras.txt", true)));
				
					bufferEntrada.write(" "+ palabra + " ");
				
				System.out.println(" frases añadidas");
			}catch (FileNotFoundException e) {
				e.getMessage();
			}
			 catch (IOException i) {
				i.getMessage();
			}
			bufferEntrada.close();
			System.out.println(" archivo cerrado");
	}
}

