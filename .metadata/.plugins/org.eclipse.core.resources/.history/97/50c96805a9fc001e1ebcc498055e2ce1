

public interface InterfaceFileCreatorApp {
	public void AbrirConexion();

	public ArrayList<String> gestionarArchivo() {
		String aux;
		int contador =5;
		int contador2 =0;
		ArrayList<String> frasesCapturadasPorTeclado = new ArrayList<>();
		ArrayList<ArrayList<String>> frasesIntroducidasPorUsuario = new ArrayList<ArrayList<String>>();
		Scanner leer = new Scanner(System.in);
		System.out.println(" escribe 5 frases: ");
		for (int i = 0; i < contador; i++) {
			contador2 = 0;
			System.out.println(" frase numero " + i +": ");
			while(contador2<5) {
				aux = leer.nextLine();
				if(Character.isWhitespace(aux.charAt(0)) || Character.isWhitespace(aux.charAt((aux.length()-1)))) {
					contador2 = 5;
				}
				frasesCapturadasPorTeclado.add(aux);
			}
				
			}
			frasesIntroducidasPorUsuario.add(frasesCapturadasPorTeclado);
			System.out.println(" frase creada");
		for (ArrayList<String> arrayList : frasesIntroducidasPorUsuario) {
			System.out.println(arrayList);
			
		}
		return frasesCapturadasPorTeclado;
	}
	public void incluirEnFichero( ArrayList<String> frases) {
		for (int i = 0; i < frases.size(); i++) {
			bufferEntrada.println(frases.get(i));
		}
		System.out.println(" frases guardadas correctamente");
	}
	public void cerrarConexion() {
		bufferEntrada.close();
		System.out.println(" archivo cerrado");
	}
}
