import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ArrayList<String> frasesAñadidas = new ArrayList<String>();
		Scanner leer = new Scanner(System.in);
		System.out.println(" vamos a añadir frases a un archivo :");
		String incluirFrases = incluirFrases();
		System.out.println(" ahora vamos a añadirla al arrayList");
		frasesAñadidas.addAll(guardarFrases(frasesAñadidas, incluirFrases));
		System.out.println(" añadamos al archivo");
		conectarArchivo(frasesAñadidas);
	}

	public static String incluirFrases() {
		String frase;
		Scanner leer = new Scanner(System.in);
		System.out.println(" dime una frase para añadir al archivo");
		frase = leer.next();
		return frase;
	}

	public static ArrayList<String> guardarFrases(ArrayList<String> incluirFrases, String frase) {
		incluirFrases.add(frase);
		return incluirFrases;

	}
	public static void conectarArchivo(ArrayList<String> incluirFrases) {
		PrintWriter bufferEntrada = null;
	
			try {
				System.out.println(" abrimos archivo para añadir frases");
				bufferEntrada = new PrintWriter(new BufferedWriter(new FileWriter("palabras.txt", true)));
				for (int i = 0; i < incluirFrases.size(); i++) {
					bufferEntrada.write(incluirFrases.get(i));
				}
				System.out.println(" frases añadidas");
			} catch (IOException e) {
				e.getMessage();
			}//catch (FileNotFoundException e) {
			/*System.out.println(e.getMessage());
		}*/
			try {
				bufferEntrada.close();
				System.out.println(" archivo cerrado");
			} catch (IOException e) {
				System.out.println(e.getMessage());
			}
			System.out.println(" archivo cerrado");
	}
}

